{% extends 'base2.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Category Management</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Category name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.categoryName }}</td>
                <td>
                    <a href="{{ path('app_categories_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('app_categories_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="text-center">
    <a href="{{ path('app_categories_new') }}">Create a new category</a></br>
    <a href="{{ path('app_home') }}">Back to home</a>
    </div>
</div>
{% endblock %}
