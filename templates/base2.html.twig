<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
        <style>
            body{
                margin: 0
            }
            .nav{
                display:flex;
                justify-content: space-around;
            
            }
            a{
                text-decoration:none;
                color:black;
            }
            .text-center{
                text-align: center;
            }
            .btn {
                padding: 10px;
                background-color: #007bff;
                color: #fff;
                border: none;
                border-radius: 3px;
                cursor: pointer;
                transition: background-color 0.3s;
            }
            .container{
                background-color: #3498db; /* Background color */
                color: #fff; /* Text color */
                padding: 20px 0; /* Padding for top and bottom */
                text-align: center; /* Center-align text */ 
            }
            .container .mb-3{
                margin: 1em auto; max-width: 1240px; width: 95%; font: 18px/1.5 sans-serif;
            }
            .container a {
                color: #fff; /* Text color */
            }
            .header {
}

            .example-wrapper { margin: 1em auto; max-width: 1240px; width: 95%; font: 18px/1.5 sans-serif; }
            .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
            .table {
                width: 100%;
                border-collapse: collapse;
                margin: 20px 0;
                padding-bottom: 1em;
            }
            .table th, .table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }
            .table th{
                background-color: #f2f2f2;
                justify-content: space-between;
                padding: 1em;
            }
            .table th div{
                display: flex;
            }
            .table th div a{
                margin-right: 0.5em;
            }
        </style>
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <header class="container">
            {% if app.user %}
                <div class="mb-3 nav">
                <a href="{{ path('app_home') }}">Home</a>
                    <a href="{{ path('app_user_index') }}">User Management</a>
                    <a href="{{ path('app_categories_index') }}">Category Management</a>
                    <a href="{{ path('app_topic_index') }}">Topic Management</a>
                    <a href="{{ path('app_board_index') }}">Board Management</a>
                    <a href="{{ path('app_roles_index') }}">Role Management</a>
                    <a href="{{ path('app_message_index') }}">Message Management</a>
                    <a href="{{ path('app_logout') }}">Logout</a>
                </div>
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}
                </div>
            {% endif %}
        </header>
        <main>
        {% block body %}{% endblock %}
        </main>
    </body>
</html>
