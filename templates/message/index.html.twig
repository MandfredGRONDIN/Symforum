{% extends 'base2.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Message Management</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Content</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.content }}</td>
                <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_message_show', {'id': message.id}) }}">show</a>
                    <a href="{{ path('app_message_edit', {'id': message.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<div class="text-center">
    <a href="{{ path('app_home') }}">Back to home</a>
    </div>
    </div>
{% endblock %}
