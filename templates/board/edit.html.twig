{% extends 'base2.html.twig' %}

{% block title %}Edit Board{% endblock %}

{% block body %}
<style>
.form-wrapper{
  max-width: 600px; /* Set the maximum width of the form */
  margin: 0 auto; /* Center-align the form horizontally */
  padding: 20px; /* Add some padding for spacing */
  background-color: #f7f7f7; /* Background color for the form */
  border: 1px solid #ddd; /* Border around the form */
  border-radius: 5px; /* Rounded corners */
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Box shadow for a subtle 3D effect */
}
/* Form Fields */
.form-wrapper #board div{
  margin-bottom: 15px; /* Spacing between form groups */
}

.form-wrapper #board label {
    display: block; /* Display labels as blocks for vertical alignment */
    margin-bottom: 5px; /* Spacing below the label */
    font-weight: bold; /* Bold label text */
}

.form-wrapper #board input, .form-wrapper #board #board_category{
    width: 96%;
    padding: 10px; /* Add padding for input fields */
    border: 1px solid #ddd; /* Border for input fields */
    border-radius: 3px; /* Rounded corners for input fields */
}
.form-wrapper #board #board_category{
    width: 100%; /* Make input fields take up the full width */
}



/* Form Buttons */
.form-wrapper .btn{
  display: block; /* Display buttons as blocks for vertical alignment */
  width: 100%; /* Make buttons take up the full width */
  padding: 10px; /* Add padding for buttons */
  background-color: #007bff; /* Button background color */
  color: #fff; /* Button text color */
  border: none; /* Remove button borders */
  border-radius: 3px; /* Rounded corners for buttons */
  cursor: pointer; /* Add a pointer cursor on hover */
  transition: background-color 0.3s; /* Smooth background color transition on hover */
}

.form-button:hover {
  background-color: #0056b3; /* Change button color on hover */
}
</style>
<div class="example-wrapper">
    <h1>Edit Board</h1>
    
    <div class="form-wrapper">

        {{ include('board/_form.html.twig', {'button_label': 'Update'}) }}
    </div>

    <a href="{{ path('app_board_show', {'id': board.id}) }}">back to board</a>

    {{ include('board/_delete_form.html.twig') }}
</div>
{% endblock %}
